{
  "tasks": {
    "build": "deno run -A build-npm.ts",
    "forge-deploy": "deno task build && deno task forge deploy && deno task forge install --upgrade",
    "forge": "cd forge-test-app && FORGE_INSPECT_ARCHIVE=.forge-out pnpm exec forge",
    "pnpm": "cd forge-test-app && pnpm",
    "test": "deno test",
    "lint": "deno lint && deno doc --lint store-forge-kv/*.ts",
    "ok": "deno fmt && deno task lint && deno check && deno task test && deno publish --dry-run --allow-dirty",
    "lock": "rm -f deno.lock && deno install --reload && deno check"
  },
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true
  },
  "workspace": [
    "./store-forge-kv"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.42.3",
    "@forge/kvs": "npm:@forge/kvs@^1.0.5",
    "@jollytoad/store-common": "jsr:@jollytoad/store-common@^0.7.0",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2"
  },
  "exclude": [
    "forge-test-app",
    "store-forge-kv/.npm",
    ".forge-out"
  ],
  "fmt": {
    "exclude": [
      "!forge-test-app"
    ]
  }
}
